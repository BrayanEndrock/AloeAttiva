<div class="about-us-banner-beaker--template">
    <div class="about-us-banner-beaker--container">
        <div class="content--wrapper">
            <div class="quote">{{ section.settings.quote }}</div>
            <div class="subquote">{{ section.settings.subquote }}</div>
            <h3 class="founder">{{ section.settings.founder }}</h3>
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Banner About Us",
        "class": "about-us-banner-beaker",
        "settings": [
            {
                "type": "richtext",
                "id": "quote",
                "label": "Quote"
            },
            {
                "type": "text",
                "id": "subquote",
                "label": "Subquote",
                "default": "“People think aloe is ordinary, but I tell them no, my Aloe is extraordinary.”"
            },
            {
                "type": "text",
                "id": "founder",
                "label": "Founder",
                "default": "Marco Vernazza, Founder"
            }
        ]
    }
{% endschema %}

{% stylesheet 'scss' %}
    .about-us-banner-beaker {
        .about-us-banner-beaker--template {
            padding-bottom: 80px;
            @media screen and (max-width: 768px) {
                padding: 0 15px 40px;  
            }
            .about-us-banner-beaker--container {
                .content--wrapper {
                    background-color: #B0BEB4;
                    border-radius: 24px;    
                    margin: 0 auto;
                    padding: 72px 0 64px 104px;
                    position: relative;
                    width: 1216px;
                    @media screen and (max-width: 768px) {
                        padding: 44px 40px 44px 20px;
                        width: auto; 
                    }
                    &:after {   
                        background-color: #F0F1EA;
                        border-bottom-right-radius: 24px;
                        border-top-right-radius: 24px;
                        bottom: 0;
                        content: "";
                        position: absolute;
                        right: 0;
                        top: 0;      
                        width: 384px;
                        @media screen and (max-width: 768px) {
                            width: 10%;
                        }
                    }
                    .quote {
                        p {
                            color: #FFFFFF;
                            font-size: 24px;
                            font-style: normal;
                            font-weight: 700;
                            letter-spacing: 0.03em;
                            line-height: 32px;
                            margin: 0 0 8px;
                            max-width: 592px;
                            @media screen and (max-width: 768px) {
                                font-size: 16px;
                                line-height: 22px;
                            }
                        }
                    }
                    .subquote {
                        color: #FFFFFF;
                        font-size: 16px;
                        font-style: normal;
                        font-weight: 400;
                        letter-spacing: 0.03em;
                        line-height: 24px;
                        margin: 0 0 24px;
                        @media screen and (max-width: 768px) {
                            font-size: 14px;     
                            line-height: 18px;
                            margin-bottom: 16px; 
                        }
                    }
                    .founder {
                        color: #FFFFFF;
                        font-size: 16px;
                        font-style: normal;
                        font-weight: 700;
                        letter-spacing: 0.03em;
                        line-height: 24px;
                        margin: 0;
                    }
                }
            }
        }
    }
{% endstylesheet %}