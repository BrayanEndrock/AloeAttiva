<section id="shopify-section-{{section_id}}" class="shopify-section section">
{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}
{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}
{{ 'newsletter-section.css' | asset_url | stylesheet_tag }}
{{ 'section-email-signup-banner.css' | asset_url | stylesheet_tag }}
{{ 'component-rte.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #Banner-{{ section_id }}::after {
    opacity: {{ atb_image_overlay_opacity | divided_by: 100.0 }};
  }

  {%- if atb_image_height == 'adapt-image' and atb_image != blank -%}
    @media screen and (max-width: 749px) {
      #Banner-{{ section_id }}:not(.banner--mobile-bottom) .banner__content::before {
        padding-bottom: {{ 1 | divided_by: atb_image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }

    #Banner-{{ section_id }}::before,
    #Banner-{{ section_id }} .banner__media::before {
      padding-bottom: {{ 1 | divided_by: atb_image.aspect_ratio | times: 100 }}%;
      content: '';
      display: block;
    }
  {%- endif -%}
{%- endstyle -%}

<div id="Banner-{{ section_id }}" class="email-signup-banner banner banner--content-align-{{ atb_desktop_content_alignment }} banner--content-align-mobile-{{ atb_mobile_content_alignment }} banner--{{ atb_image_height }}{% if atb_image_height == 'adapt-image' and atb_image != blank %} banner--adapt{% endif %}{% if atb_show_text_below %} banner--mobile-bottom{%- endif -%}{% if atb_show_text_box == false %} banner--desktop-transparent{% endif %}">
  {%- if atb_show_background_image -%}
    <div class="banner__media{% if atb_image != blank %} media{% endif %}">
      {%- if atb_image != blank -%}
        <img
          srcset="{%- if atb_image.width >= 375 -%}{{ atb_image | img_url: '375x' }} 375w,{%- endif -%}
            {%- if atb_image.width >= 750 -%}{{ atb_image | img_url: '750x' }} 750w,{%- endif -%}
            {%- if atb_image.width >= 1100 -%}{{ atb_image | img_url: '1100x' }} 1100w,{%- endif -%}
            {%- if atb_image.width >= 1500 -%}{{ atb_image | img_url: '1500x' }} 1500w,{%- endif -%}
            {%- if atb_image.width >= 1780 -%}{{ atb_image | img_url: '1780x' }} 1780w,{%- endif -%}
            {%- if atb_image.width >= 2000 -%}{{ atb_image | img_url: '2000x' }} 2000w,{%- endif -%}
            {%- if atb_image.width >= 3000 -%}{{ atb_image | img_url: '3000x' }} 3000w,{%- endif -%}
            {%- if atb_image.width >= 3840 -%}{{ atb_image | img_url: '3840x' }} 3840w,{%- endif -%}
            {{ atb_image | img_url: 'master' }} {{ atb_image.width }}w"
          sizes="100vw"
          src="{{ atb_image | img_url: '1500x' }}"
          loading="lazy"
          alt="{{ atb_image.alt | escape }}"
          width="{{ atb_image.width }}"
          height="{{ atb_image.width | divided_by: atb_image.aspect_ratio }}"
        >
      {%- else -%}
        {%- render 'email-signup-banner-background' -%}
        {%- render 'email-signup-banner-background-mobile' -%}
      {%- endif -%}
    </div>
  {%- endif -%}
  <div class="banner__content banner__content--{{ atb_desktop_content_position }} page-width">
    <div class="email-signup-banner__box banner__box newsletter newsletter__wrapper isolate{% if atb_show_background_image == false %} email-signup-banner__box--no-image{% endif %} content-container color-{{ atb_color_scheme }} content-container--full-width-mobile">
      {%- for block0 in blocks -%}
        {%- case block_type[forloop.index0] -%}
          {%- when 'heading' -%}
            <h2 class="email-signup-banner__heading h1" {{ block.shopify_attributes }}>{{ block_heading[forloop.index0] | escape }}</h2>
          {%- when 'paragraph' -%}
            <div class="newsletter__subheading rte {{ block_text_style[forloop.index0] }}" {{ block.shopify_attributes }}>{{ block_text[forloop.index0] }}</div>
          {%- when 'email_form' -%}
            <div {{ block.shopify_attributes }}>
              {% form 'customer', class: 'newsletter-form' %}
                <input type="hidden" name="contact[tags]" value="newsletter">
                <div class="newsletter-form__field-wrapper">
                  <div class="field">
                    <input
                      id="NewsletterForm--{{ section_id }}"
                      type="email"
                      name="contact[email]"
                      class="field__input"
                      value="{{ form.email }}"
                      aria-required="true"
                      autocorrect="off"
                      autocapitalize="off"
                      autocomplete="email"
                      {% if form.errors %}
                        autofocus
                        aria-invalid="true"
                        aria-describedby="Newsletter-error--{{ section_id }}"
                      {% elsif form.posted_successfully? %}
                        aria-describedby="Newsletter-success--{{ section_id }}"
                      {% endif %}
                      placeholder="{{ 'newsletter.label' | t }}"
                      required
                    >
                    <label class="field__label" for="NewsletterForm--{{ section_id }}">
                      {{ 'newsletter.label' | t }}
                    </label>
                    <button type="submit" class="newsletter-form__button field__button" name="commit" id="Subscribe" aria-label="{{ 'newsletter.button_label' | t }}">
                      {% render 'icon-arrow' %}
                    </button>
                  </div>
                  {%- if form.errors -%}
                    <small class="newsletter-form__message form__message" id="Newsletter-error--{{ section_id }}">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</small>
                  {%- endif -%}
                </div>
                {%- if form.posted_successfully? -%}
                  <h3 class="newsletter-form__message newsletter-form__message--success form__message" id="Newsletter-success--{{ section_id }}" tabindex="-1" autofocus>{% render 'icon-success' %}{{ 'newsletter.success' | t }}</h3>
                {%- endif -%}
              {% endform %}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>


</section>