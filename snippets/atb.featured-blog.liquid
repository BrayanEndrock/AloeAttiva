{% comment %}
ATB-SCHEMA{
  "name": "t:sections.featured-blog.name",
  "tag": "section",
  "class": "section",
  "id": "featured-blog",
  "banner": "",
  "icon": "",
  "tags": "",
  "description": "",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID",
      "info": "Enter a unique ID with only letters and numbers, no spaces",
      "default": ""
    },
    {
      "type": "text",
      "id": "atb_heading",
      "default": "Blog posts",
      "label": "t:sections.featured-blog.settings.heading.label",
      "info": ""
    },
    {
      "type": "blog",
      "id": "atb_blog",
      "label": "t:sections.featured-blog.settings.blog.label",
      "info": ""
    },
    {
      "type": "range",
      "id": "atb_post_limit",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "t:sections.featured-blog.settings.post_limit.label",
      "info": ""
    },
    {
      "type": "select",
      "id": "atb_color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.all.colors.accent_1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.all.colors.accent_2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.all.colors.background_1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.all.colors.background_2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.all.colors.inverse.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info"
    },
    {
      "type": "checkbox",
      "id": "atb_show_image",
      "default": true,
      "label": "t:sections.featured-blog.settings.show_image.label",
      "info": "t:sections.featured-blog.settings.show_image.info"
    },
    {
      "type": "checkbox",
      "id": "atb_show_date",
      "default": true,
      "label": "t:sections.featured-blog.settings.show_date.label",
      "info": ""
    },
    {
      "type": "checkbox",
      "id": "atb_show_author",
      "default": false,
      "label": "t:sections.featured-blog.settings.show_author.label",
      "info": ""
    },
    {
      "type": "checkbox",
      "id": "atb_show_view_all",
      "default": true,
      "label": "t:sections.featured-blog.settings.show_view_all.label",
      "info": ""
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading",
      "info": ""
    },
    {
      "type": "range",
      "id": "atb_padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36,
      "info": ""
    },
    {
      "type": "range",
      "id": "atb_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36,
      "info": ""
    }
  ],
  "warnings": []
}ATB-SCHEMA
{% endcomment %}


{%- include 'atb-render' field:'section_id' -%}
{%- assign section_id = val -%}
{%- include 'atb-render' field:'atb_heading' -%}
{%- assign atb_heading = val -%}
{%- include 'atb-render' field:'atb_blog' -%}
{%- assign atb_blog = val -%}
{%- include 'atb-render' field:'atb_post_limit' -%}
{%- assign atb_post_limit = val -%}
{%- include 'atb-render' field:'atb_color_scheme' -%}
{%- assign atb_color_scheme = val -%}
{%- include 'atb-render' field:'atb_show_image' -%}
{%- assign atb_show_image = val -%}
{%- include 'atb-render' field:'atb_show_date' -%}
{%- assign atb_show_date = val -%}
{%- include 'atb-render' field:'atb_show_author' -%}
{%- assign atb_show_author = val -%}
{%- include 'atb-render' field:'atb_show_view_all' -%}
{%- assign atb_show_view_all = val -%}
{%- include 'atb-render' field:'atb_padding_top' -%}
{%- assign atb_padding_top = val -%}
{%- include 'atb-render' field:'atb_padding_bottom' -%}
{%- assign atb_padding_bottom = val -%}
{%- if atb_show_image == blank -%}
{%- assign atb_show_image = false -%}
{%- else -%}
{%- assign atb_show_image = true -%}
{%- endif -%}
{%- if atb_show_date == blank -%}
{%- assign atb_show_date = false -%}
{%- else -%}
{%- assign atb_show_date = true -%}
{%- endif -%}
{%- if atb_show_author == blank -%}
{%- assign atb_show_author = false -%}
{%- else -%}
{%- assign atb_show_author = true -%}
{%- endif -%}
{%- if atb_show_view_all == blank -%}
{%- assign atb_show_view_all = false -%}
{%- else -%}
{%- assign atb_show_view_all = true -%}
{%- endif -%}
{%- assign atb_post_limit = atb_post_limit | plus: 0 -%}
{%- assign atb_padding_top = atb_padding_top | plus: 0 -%}
{%- assign atb_padding_bottom = atb_padding_bottom | plus: 0 -%}
{%- assign no_image = images['no_image_comparison'] -%}

<section id="shopify-section-{{section_id}}" class="shopify-section section">
<link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-card.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-article-card.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'section-featured-blog.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-card.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-article-card.css' | asset_url | stylesheet_tag }}</noscript>

{{ 'section-featured-blog.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section_id }}-padding {
    padding-top: {{ atb_padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ atb_padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section_id }}-padding {
      padding-top: {{ atb_padding_top }}px;
      padding-bottom: {{ atb_padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign posts_displayed = atb_blog.articles_count
  if atb_post_limit <= atb_blog.articles_count
    assign posts_exceed_limit = true
    assign posts_displayed = atb_post_limit
  endif
-%}
<div class="blog isolate color-{{ atb_color_scheme }} gradient{% if atb_heading == blank %} no-heading{% endif %}">
  <div class="page-width-desktop{% if posts_displayed < 3 %} page-width-tablet{% endif %} section-{{ section_id }}-padding">
    <div class="title-wrapper-with-link{% if atb_heading == blank %} title-wrapper-with-link--no-heading{% endif %} {% if posts_displayed > 2 %}title-wrapper--self-padded-tablet-down{% else %}title-wrapper--self-padded-mobile{% endif %} title-wrapper--no-top-margin">
      <h2 class="blog__title">{{ atb_heading | escape }}</h2>

      {%- if atb_blog != blank and atb_show_view_all and atb_post_limit < atb_blog.articles_count -%}
        <a href="{{ atb_blog.url }}"
          class="link underlined-link large-up-hide"
        >
          {{ 'sections.featured_blog.view_all' | t }}
        </a>
      {%- endif -%}
    </div>
    {%- if atb_blog != blank and atb_blog.articles_count > 0 -%}
      <slider-component class="slider-mobile-gutter">
        <ul id="Slider-{{ section_id }}"
          class="blog__posts articles-wrapper grid grid--peek grid--2-col-tablet grid--4-col-desktop slider {% if posts_displayed > 2 %}slider--tablet{% else %}slider--mobile{% endif %}"
          role="list"
        >
          {%- for article in atb_blog.articles limit: atb_post_limit -%}
            <li id="Slide-{{ section_id }}-{{ forloop.index }}" class="blog__post grid__item article slider__slide slider__slide--full-width">
              {% render 'article-card', blog: atb_blog, article: article, media_aspect_ratio: 1.66, show_image: atb_show_image, show_date: atb_show_date, show_author: atb_show_author, show_excerpt: true %}
            </li>
          {%- endfor -%}
        </ul>
        {%- if posts_exceed_limit -%}
          <div class="slider-buttons no-js-hidden{% if atb_post_limit < 3 %} medium-hide{% endif %}{% if atb_post_limit < 2 %} small-hide{% endif %}">
            <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}">{% render 'icon-caret' %}</button>
            <div class="slider-counter caption">
              <span class="slider-counter--current">1</span>
              <span aria-hidden="true"> / </span>
              <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
              <span class="slider-counter--total">{{ atb_post_limit }}</span>
            </div>
            <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}">{% render 'icon-caret' %}</button>
          </div>
        {%- endif -%}
      </slider-component>

      {%- if atb_show_view_all and atb_post_limit < atb_blog.articles_count -%}
        <div class="blog__view-all center small-hide medium-hide">
          <a href="{{ atb_blog.url }}" class="blog__button button">
            {{ 'sections.featured_blog.view_all' | t }}
          </a>
        </div>
      {%- endif -%}
    {%- else -%}
      <div class="blog-placeholder">
        <div class="placeholder media media--landscape">
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
        <div class="blog-placeholder__content">
          <h2>
            {{ 'sections.featured_blog.onboarding_title' | t }}
          </h2>
          <p class="rte-width">
            {{ 'sections.featured_blog.onboarding_content' | t }}
          </p>
        </div>
      </div>
    {%- endif -%}
  </div>
</div>


</section>