<section id="shopify-section-{{section_id}}" class="shopify-section section">
{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section_id }}-padding {
    padding-top: {{ atb_padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ atb_padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section_id }}-padding {
      padding-top: {{ atb_padding_top }}px;
      padding-bottom: {{ atb_padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="image-with-text image-with-text--{{ atb_content_layout }} page-width isolate{% if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0 %} collapse-borders{% endif %}{% unless atb_color_scheme == 'background-1' and settings.media_border_thickness > 0 and settings.text_boxes_shadow_opacity == 0 and settings.text_boxes_border_thickness == 0 or settings.text_boxes_border_opacity == 0 %} collapse-corners{% endunless %} section-{{ section_id }}-padding">
  <div class="image-with-text__grid grid grid--gapless grid--1-col grid--{% if atb_desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}{% if atb_layout == 'text_first' %} image-with-text__grid--reverse{% endif %}">
    <div class="image-with-text__media-item image-with-text__media-item--{{ atb_desktop_image_width }} image-with-text__media-item--{{ atb_desktop_content_position }} grid__item">
      <div class="image-with-text__media image-with-text__media--{{ atb_height }} gradient color-{{ atb_color_scheme }} global-media-settings {% if atb_image != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}"
        {% if atb_height == 'adapt' and atb_image != blank %} style="padding-bottom: {{ 1 | divided_by: atb_image.aspect_ratio | times: 100 }}%;"{% endif %}
      >
        {%- if atb_image != blank -%}
          <img
            srcset="{%- if atb_image.width >= 165 -%}{{ atb_image | img_url: '165x' }} 165w,{%- endif -%}
              {%- if atb_image.width >= 360 -%}{{ atb_image | img_url: '360x' }} 360w,{%- endif -%}
              {%- if atb_image.width >= 535 -%}{{ atb_image | img_url: '535x' }} 535w,{%- endif -%}
              {%- if atb_image.width >= 750 -%}{{ atb_image | img_url: '750x' }} 750w,{%- endif -%}
              {%- if atb_image.width >= 1070 -%}{{ atb_image | img_url: '1070x' }} 1070w,{%- endif -%}
              {%- if atb_image.width >= 1500 -%}{{ atb_image | img_url: '1500x' }} 1500w,{%- endif -%}
              {{ atb_image | img_url: 'master' }} {{ atb_image.width }}w"
            src="{{ atb_image | img_url: '1500x' }}"
            sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ atb_image.alt | escape }}"
            loading="lazy"
            width="{{ atb_image.width }}"
            height="{{ atb_image.height }}"
          >
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    </div>
    <div class="image-with-text__text-item grid__item">
      <div id="ImageWithText--{{ section_id }}" class="image-with-text__content image-with-text__content--{{ atb_desktop_content_position }} image-with-text__content--desktop-{{ atb_desktop_content_alignment }} image-with-text__content--mobile-{{ atb_mobile_content_alignment }} image-with-text__content--{{ atb_height }} gradient color-{{ atb_color_scheme }} content-container">
        {%- for block0 in blocks -%}
          {% case block_type[forloop.index0] %}
            {%- when 'heading' -%}
              <h2 class="image-with-text__heading {{ block_heading_size[forloop.index0] }}" {{ block.shopify_attributes }}>
                {{ block_heading[forloop.index0] | escape }}
              </h2>
            {%- when 'caption' -%}
              <p class="image-with-text__text image-with-text__text--caption {{ block_text_style[forloop.index0] }} {{ block_text_style[forloop.index0] }}--{{ block_text_size[forloop.index0] }} {{ block_text_style[forloop.index0] }}" {{ block.shopify_attributes }}>{{ block_caption[forloop.index0] | escape }}</p>
            {%- when 'text' -%}
              <div class="image-with-text__text rte {{ block_text_style[forloop.index0] }}" {{ block.shopify_attributes }}>{{ block_text[forloop.index0] }}</div>
            {%- when 'button' -%}
              {%- if block_button_label[forloop.index0] != blank -%}
                <a{% if block_button_link[forloop.index0] == blank %} role="link" aria-disabled="true"{% else %} href="{{ block_button_link[forloop.index0] }}"{% endif %} class="button{% if block_button_style_secondary[forloop.index0] %} button--secondary{% else %} button--primary{% endif %}" {{ block.shopify_attributes }}>
                  {{ block_button_label[forloop.index0] | escape }}
                </a>
              {%- endif -%}
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>


</section>