{% comment %}
ATB-SCHEMA{
  "name": "t:sections.featured-collection.name",
  "tag": "section",
  "class": "section",
  "id": "featured-collection",
  "banner": "",
  "icon": "",
  "tags": "",
  "description": "",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID",
      "info": "Enter a unique ID with only letters and numbers, no spaces",
      "default": ""
    },
    {
      "type": "text",
      "id": "atb_title",
      "default": "Featured collection",
      "label": "t:sections.featured-collection.settings.title.label",
      "info": ""
    },
    {
      "type": "collection",
      "id": "atb_collection",
      "label": "t:sections.featured-collection.settings.collection.label",
      "info": ""
    },
    {
      "type": "range",
      "id": "atb_products_to_show",
      "min": 2,
      "max": 12,
      "step": 2,
      "default": 4,
      "label": "t:sections.featured-collection.settings.products_to_show.label",
      "info": ""
    },
    {
      "type": "select",
      "id": "atb_color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.all.colors.accent_1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.all.colors.accent_2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.all.colors.background_1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.all.colors.background_2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.all.colors.inverse.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info"
    },
    {
      "type": "checkbox",
      "id": "atb_show_view_all",
      "default": true,
      "label": "t:sections.featured-collection.settings.show_view_all.label",
      "info": ""
    },
    {
      "type": "checkbox",
      "id": "atb_swipe_on_mobile",
      "default": false,
      "label": "t:sections.featured-collection.settings.swipe_on_mobile.label",
      "info": ""
    },
    {
      "type": "header",
      "content": "t:sections.featured-collection.settings.header.content",
      "info": ""
    },
    {
      "type": "select",
      "id": "atb_image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.featured-collection.settings.image_ratio.options__1.label"
        },
        {
          "value": "portrait",
          "label": "t:sections.featured-collection.settings.image_ratio.options__2.label"
        },
        {
          "value": "square",
          "label": "t:sections.featured-collection.settings.image_ratio.options__3.label"
        }
      ],
      "default": "adapt",
      "label": "t:sections.featured-collection.settings.image_ratio.label",
      "info": ""
    },
    {
      "type": "checkbox",
      "id": "atb_show_secondary_image",
      "default": false,
      "label": "t:sections.featured-collection.settings.show_secondary_image.label",
      "info": ""
    },
    {
      "type": "checkbox",
      "id": "atb_show_vendor",
      "default": false,
      "label": "t:sections.featured-collection.settings.show_vendor.label",
      "info": ""
    },
    {
      "type": "checkbox",
      "id": "atb_show_rating",
      "default": false,
      "label": "t:sections.featured-collection.settings.show_rating.label",
      "info": "t:sections.featured-collection.settings.show_rating.info"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading",
      "info": ""
    },
    {
      "type": "range",
      "id": "atb_padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36,
      "info": ""
    },
    {
      "type": "range",
      "id": "atb_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36,
      "info": ""
    }
  ],
  "warnings": []
}ATB-SCHEMA
{% endcomment %}


{%- include 'atb-render' field:'section_id' -%}
{%- assign section_id = val -%}
{%- include 'atb-render' field:'atb_title' -%}
{%- assign atb_title = val -%}
{%- include 'atb-render' field:'atb_collection' -%}
{%- assign atb_collection = val -%}
{%- include 'atb-render' field:'atb_products_to_show' -%}
{%- assign atb_products_to_show = val -%}
{%- include 'atb-render' field:'atb_color_scheme' -%}
{%- assign atb_color_scheme = val -%}
{%- include 'atb-render' field:'atb_show_view_all' -%}
{%- assign atb_show_view_all = val -%}
{%- include 'atb-render' field:'atb_swipe_on_mobile' -%}
{%- assign atb_swipe_on_mobile = val -%}
{%- include 'atb-render' field:'atb_image_ratio' -%}
{%- assign atb_image_ratio = val -%}
{%- include 'atb-render' field:'atb_show_secondary_image' -%}
{%- assign atb_show_secondary_image = val -%}
{%- include 'atb-render' field:'atb_show_vendor' -%}
{%- assign atb_show_vendor = val -%}
{%- include 'atb-render' field:'atb_show_rating' -%}
{%- assign atb_show_rating = val -%}
{%- include 'atb-render' field:'atb_padding_top' -%}
{%- assign atb_padding_top = val -%}
{%- include 'atb-render' field:'atb_padding_bottom' -%}
{%- assign atb_padding_bottom = val -%}
{%- if atb_show_view_all == blank -%}
{%- assign atb_show_view_all = false -%}
{%- else -%}
{%- assign atb_show_view_all = true -%}
{%- endif -%}
{%- if atb_swipe_on_mobile == blank -%}
{%- assign atb_swipe_on_mobile = false -%}
{%- else -%}
{%- assign atb_swipe_on_mobile = true -%}
{%- endif -%}
{%- if atb_show_secondary_image == blank -%}
{%- assign atb_show_secondary_image = false -%}
{%- else -%}
{%- assign atb_show_secondary_image = true -%}
{%- endif -%}
{%- if atb_show_vendor == blank -%}
{%- assign atb_show_vendor = false -%}
{%- else -%}
{%- assign atb_show_vendor = true -%}
{%- endif -%}
{%- if atb_show_rating == blank -%}
{%- assign atb_show_rating = false -%}
{%- else -%}
{%- assign atb_show_rating = true -%}
{%- endif -%}
{%- assign atb_products_to_show = atb_products_to_show | plus: 0 -%}
{%- assign atb_padding_top = atb_padding_top | plus: 0 -%}
{%- assign atb_padding_bottom = atb_padding_bottom | plus: 0 -%}
{%- assign no_image = images['no_image_comparison'] -%}

<section id="shopify-section-{{section_id}}" class="shopify-section section">
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

<link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'template-collection.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'template-collection.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .section-{{ section_id }}-padding {
    padding-top: {{ atb_padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ atb_padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section_id }}-padding {
      padding-top: {{ atb_padding_top }}px;
      padding-bottom: {{ atb_padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign products_to_display = atb_collection.all_products_count

  if atb_collection.all_products_count > atb_products_to_show
    assign products_to_display = atb_products_to_show
    assign more_in_collection = true
  endif
-%}

<div class="color-{{ atb_color_scheme }} isolate gradient">
  <div class="collection page-width{% if atb_swipe_on_mobile == true and atb_collection.all_products_count > 2 and atb_products_to_show > 2 %} page-width-desktop{% endif %} section-{{ section_id }}-padding">
    {% unless atb_title == blank %}
      <div class="title-wrapper-with-link{% if atb_title == blank %} title-wrapper-with-link--no-heading{% endif %}{% if atb_collection.all_products_count > 2 and atb_swipe_on_mobile and atb_products_to_show > 2 %} title-wrapper--self-padded-tablet-down{% endif %} title-wrapper--no-top-margin">
        <h2 class="title{% if atb_title == blank %} title--no-heading{% endif %}">{{ atb_title | escape }}</h2>
  
        {%- if atb_show_view_all and atb_swipe_on_mobile and more_in_collection -%}
          <a href="{{ atb_collection.url }}" class="link underlined-link large-up-hide">{{ 'sections.featured_collection.view_all' | t }}</a>
        {%- endif -%}
      </div>
    {% endunless %}
  
    <slider-component class="slider-mobile-gutter">
      <ul id="Slider-{{ section_id }}" class="grid grid--2-col product-grid{% if products_to_display == 4 or atb_collection == blank %} grid--2-col-tablet grid--4-col-desktop{% else %} grid--3-col-tablet{% endif %}{% if products_to_display > 5 %} grid--one-third-max grid--4-col-desktop grid--quarter-max{% endif %}{% if atb_collection.all_products_count > 2 and atb_swipe_on_mobile and atb_products_to_show > 2 %} slider slider--tablet grid--peek{% endif %}" role="list">
        {%- for product in atb_collection.products limit: atb_products_to_show -%}
          <li id="Slide-{{ section_id }}-{{ forloop.index }}" class="grid__item{% if atb_collection.all_products_count > 2 and atb_swipe_on_mobile and atb_products_to_show > 2 %} slider__slide{% endif %}">
            {% render 'card-product',
              card_product: product,
              media_aspect_ratio: atb_image_ratio,
              show_secondary_image: atb_show_secondary_image,
              show_vendor: atb_show_vendor,
              show_rating: atb_show_rating
            %}
          </li>
        {%- else -%}
          {%- for i in (1..4) -%}
            <li class="grid__item">
              {% render 'card-product', show_vendor: atb_show_vendor %}
            </li>
          {%- endfor -%}
        {%- endfor -%}
      </ul>
      {%- if atb_collection.all_products_count > 2 and atb_swipe_on_mobile and atb_products_to_show > 2 -%}
        <div class="slider-buttons no-js-hidden{% if atb_collection.all_products_count < 4 %} medium-hide{% endif %}{% if atb_collection.all_products_count < 3 %} small-hide{% endif %}">
          <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}">{% render 'icon-caret' %}</button>
          <div class="slider-counter caption">
            <span class="slider-counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="slider-counter--total">{{ products_to_display }}</span>
          </div>
          <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}">{% render 'icon-caret' %}</button>
        </div>
      {%- endif -%}
    </slider-component>
  
    {%- if atb_show_view_all and more_in_collection -%}
      <div class="center collection__view-all{% if atb_swipe_on_mobile %} small-hide medium-hide{% endif %}">
        <a href="{{ atb_collection.url }}"
          class="button"
          aria-label="{{ 'sections.featured_collection.view_all_label' | t: collection_name: atb_collection.title }}"
        >
          {{ 'sections.featured_collection.view_all' | t }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

</section>