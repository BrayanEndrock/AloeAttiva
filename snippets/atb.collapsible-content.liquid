<section id="shopify-section-{{section_id}}" class="shopify-section section">
{{ 'component-accordion.css' | asset_url | stylesheet_tag }}
{{ 'collapsible-content.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section_id }}-padding {
    padding-top: {{ atb_padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ atb_padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section_id }}-padding {
      padding-top: {{ atb_padding_top }}px;
      padding-bottom: {{ atb_padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ atb_color_scheme }} gradient">
  <div class="collapsible-content collapsible-{{ atb_layout }}-layout isolate{% if atb_layout == 'section' %} page-width{% elsif atb_layout == 'none' %} content-container content-container--full-width{% endif %}">
    <div class="collapsible-content__wrapper section-{{ section_id }}-padding{% if atb_layout == 'section' %} content-container color-{{ atb_container_color_scheme }} gradient{% endif %}">
      <div class="{% if atb_image == blank %}collapsible-content-wrapper-narrow{% else %}page-width{% endif %}">
        <div class="collapsible-content__header" style="text-align: {{ atb_heading_alignment }};">
          {%- if atb_caption != blank -%}
            <p class="caption-with-letter-spacing"> {{ atb_caption | escape }}</p>
          {% endif %}
          {%- if atb_heading != blank -%}
            <h2 class="collapsible-content__heading">{{ atb_heading | escape }}</h2>
          {%- else -%}
            <h2 class="visually-hidden">{{ 'accessibility.collapsible_content_title' | t }}</h2>
          {% endif %}
        </div>
        <div class="grid grid--1-col grid--2-col-tablet collapsible-content__grid{% if atb_desktop_layout == 'image_second' %} collapsible-content__grid--reverse{% endif %}">
          {%- if atb_image != blank -%}
            <div class="grid__item collapsible-content__grid-item">
              <div class="collapsible-content__media collapsible-content__media--{{ atb_image_ratio }} media global-media-settings gradient"
                {% if atb_image_ratio == 'adapt' %} style="padding-bottom: {{ 1 | divided_by: atb_image.aspect_ratio | times: 100 }}%;"{% endif %}
              >
                <img
                  srcset="{%- if atb_image.width >= 165 -%}{{ atb_image | img_url: '165x' }} 165w,{%- endif -%}
                    {%- if atb_image.width >= 360 -%}{{ atb_image | img_url: '360x' }} 360w,{%- endif -%}
                    {%- if atb_image.width >= 535 -%}{{ atb_image | img_url: '535x' }} 535w,{%- endif -%}
                    {%- if atb_image.width >= 750 -%}{{ atb_image | img_url: '750x' }} 750w,{%- endif -%}
                    {%- if atb_image.width >= 1070 -%}{{ atb_image | img_url: '1070x' }} 1070w,{%- endif -%}
                    {%- if atb_image.width >= 1250 -%}{{ atb_image | img_url: '1250x' }} 1250w,{%- endif -%}
                    {%- if atb_image.width >= 1500 -%}{{ atb_image | img_url: '1500x' }} 1500w,{%- endif -%}
                    {{ atb_image | img_url: 'master' }} {{ atb_image.width }}w"
                  src="{{ atb_image | img_url: '1500x' }}"
                  sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                  alt="{{ atb_image.alt | escape }}"
                  loading="lazy"
                  width="{{ atb_image.width }}"
                  height="{{ atb_image.height }}"
                >
              </div>
            </div>
          {% endif %}
          <div class="grid__item">
            {%- for block0 in blocks -%}
              <div class="accordion{% if atb_layout == 'row' %} content-container color-{{ atb_container_color_scheme }} gradient{% endif %}" {{ block.shopify_attributes }}>
                <details id="Details-{{ blocks[forloop.index0] }}-{{ section_id }}"{% if atb_open_first_collapsible_row and forloop.first %} open{% endif %}>
                  <summary id="Summary-{{ blocks[forloop.index0] }}-{{ section_id }}">
                    {% render 'icon-accordion', icon: block_icon[forloop.index0] %}
                    <h3 class="accordion__title h4">
                      {{ block_heading[forloop.index0] | default: block_page[forloop.index0].title }}
                    </h3>
                    {% render 'icon-caret' %}
                  </summary>
                  <div class="accordion__content rte" id="CollapsibleAccordion-{{ blocks[forloop.index0] }}-{{ section_id }}" role="region" aria-labelledby="Summary-{{ blocks[forloop.index0] }}-{{ section_id }}">
                    {{ block_row_content[forloop.index0] }}
                    {{ block_page[forloop.index0].content }}
                  </div>
                </details>
              </div>
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
